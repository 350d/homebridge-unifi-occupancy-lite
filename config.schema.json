{
  "pluginAlias": "UnifiOccupancy",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "unifi": {
        "title": "UniFi Controller Settings",
        "type": "object",
        "properties": {
          "controller": {
            "title": "Controller URL",
            "description": "Requires UniFi OS",
            "type": "string",
            "required": true,
            "default": "https://192.168.1.1"
          },
          "username": {
            "title": "Username",
            "type": "string",
            "required": true
          },
          "password": {
            "title": "Password",
            "type": "string",
            "required": true
          },
          "site": {
            "title": "Site",
            "type": "string",
            "default": "default",
            "required": true
          },
          "secure": {
            "title": "Validate the Controller SSL Certificate",
            "type": "boolean",
            "default": false
          }
        }
      },
      "interval": {
        "title": "Refresh Interval (in seconds)",
        "description": "If connect/disconnect/roam events don't work, ",
        "type": "integer",
        "required": false,
        "default": 180
      },
      "deviceType": {
        "title": "Include devices",
        "type": "object",
        "properties": {
          "smartphone": {
            "title": "Smartphone",
            "type": "boolean",
            "default": true
          },
          "laptop": {
            "title": "Laptop",
            "description": "Currently only reliably detects MacBooks",
            "type": "boolean",
            "default": false
          },
          "tablet": {
            "title": "Tablet",
            "type": "boolean",
            "default": false
          },
          "smart_watch": {
            "title": "Smart Watch",
            "type": "boolean",
            "default": false
          },
          "ereader": {
            "title": "E-reader",
            "type": "boolean",
            "default": false
          },
          "game_console": {
            "title": "Game Console",
            "description": "Currently only detects Nintendo Switch and Valve Steam Deck",
            "type": "boolean",
            "default": false
          },
          "handheld": {
            "title": "Unspecified handheld",
            "description": "Any other devices identified as 'Handheld'",
            "type": "boolean",
            "default": false
          },
          "other": {
            "title": "Other wireless",
            "description": "All other wireless devices, including those that don't typically move around",
            "type": "boolean",
            "default": false
          },
          "wired": {
            "title": "Wired devices",
            "type": "boolean",
            "default": false
          }
        }
      },
      "showAsOwner": {
        "title": "Show these devices using the owner's name",
        "description": "Should be a device that the owner always carries around. The owner's name is derived from the device (host)name or alias (configured in the UniFi Network UI). For example, `Douwe's [device]` (English), `[device] de Douwe` (Spanish), and `[device] van Douwe` (Dutch) all become `Douwe`.",
        "type": "string",
        "default": "smartphone",
        "oneOf": [
          {
            "title": "Smartphone",
            "enum": ["smartphone"]
          },
          {
            "title": "Smart Watch",
            "enum": ["smart_watch"]
          }
        ]
      },
      "accessPointAliases": {
        "title": "Access Point Aliases",
        "type": "array",
        "items": {
          "title": "AP / Alias",
          "type": "object",
          "properties": {
            "accessPoint": {
              "title": "Access Point",
              "description": "MAC Address or Name",
              "type": "string",
              "required": true
            },
            "alias": {
              "title": "Alias",
              "description": "Room Name",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "ref": "unifi",
      "type": "fieldset",
      "title": "UniFi Controller Settings",
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["unifi.controller", "unifi.username"]
            }
          ]
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["unifi.site", "unifi.password"]
            }
          ]
        },
        "unifi.secure",
        "interval"
      ]
    },
    {
      "ref": "deviceType",
      "type": "fieldset",
      "title": "Devices",
      "items": [
        "deviceType.smartphone",
        "deviceType.laptop",
        "deviceType.tablet",
        "deviceType.smart_watch",
        "deviceType.ereader",
        "deviceType.game_console",
        "deviceType.handheld",
        "deviceType.other",
        "deviceType.wired"
      ]
    },
    "showAsOwner",
    {
      "key": "accessPointAliases",
      "type": "array",
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["accessPointAliases[].accessPoint"]
            },
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["accessPointAliases[].alias"]
            }
          ]
        }
      ]
    }
  ]
}
