{
  "pluginAlias": "UnifiOccupancyLite",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "unifi": {
        "title": "UniFi Settings",
        "type": "object",
        "properties": {
          "controller": {
            "title": "Controller URL",
            "type": "string",
            "required": true,
            "default": "https://192.168.1.1",
            "description": "URL of your UniFi controller (UDM Pro/SE, UDM, UDR, etc.)"
          },
          "apiKey": {
            "title": "API Key",
            "type": "string",
            "required": true,
            "description": "API Key from UniFi Network settings or Site Manager API Key"
          },
          "useSiteManagerApi": {
            "title": "Use Site Manager API",
            "type": "boolean",
            "default": false,
            "description": "Use UniFi Site Manager API instead of local controller API"
          },
          "hostId": {
            "title": "Host ID",
            "type": "string",
            "description": "Host ID for Site Manager API (required when using Site Manager API)"
          },
          "site": {
            "title": "Site",
            "type": "string",
            "default": "default",
            "description": "UniFi site name (usually 'default')"
          },
          "secure": {
            "title": "Validate SSL Certificate",
            "type": "boolean",
            "default": false,
            "description": "Enable SSL certificate validation (disable for self-signed certificates)"
          }
        }
      },
      "interval": {
        "title": "Refresh Interval (seconds)",
        "description": "How often to check for device presence changes",
        "type": "integer",
        "default": 180,
        "minimum": 30,
        "maximum": 3600
      },
      "globalPresenceSensor": {
        "title": "Enable Global Presence Sensor",
        "description": "Create a single sensor that shows if ANY resident is home",
        "type": "boolean",
        "default": true
      },
      "residents": {
        "title": "Residents",
        "description": "List of residents and their devices to track",
        "type": "array",
        "items": {
          "title": "Resident",
          "type": "object",
          "properties": {
            "name": {
              "title": "Resident Name",
              "type": "string",
              "required": true,
              "description": "Display name for this resident (e.g., 'John', 'Mary')"
            },
            "devices": {
              "title": "Devices",
              "type": "array",
              "items": {
                "title": "Device",
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Device Name",
                    "type": "string",
                    "required": true,
                    "description": "Display name for this device (e.g., 'John's iPhone')"
                  },
                  "hostname": {
                    "title": "Hostname",
                    "type": "string",
                    "description": "Device hostname (optional)"
                  },
                  "ip": {
                    "title": "IP Address",
                    "type": "string",
                    "description": "Device IP address (optional)"
                  },
                  "mac": {
                    "title": "MAC Address",
                    "type": "string",
                    "description": "Device MAC address (optional)"
                  },
                  "minTrafficAmount": {
                    "title": "Minimum Traffic (KB/15min)",
                    "type": "integer",
                    "minimum": 0,
                    "description": "Minimum traffic amount in KB over 15 minutes to consider device active"
                  }
                }
              }
            }
          }
        }
      },
      "wifiPoints": {
        "title": "WiFi Access Points",
        "description": "List of WiFi access points to create room-specific presence sensors",
        "type": "array",
        "items": {
          "title": "WiFi Point",
          "type": "object",
          "properties": {
            "name": {
              "title": "Room/Location Name",
              "type": "string",
              "required": true,
              "description": "Display name for this location (e.g., 'Living Room', 'Bedroom')"
            },
            "ip": {
              "title": "IP Address",
              "type": "string",
              "description": "Access point IP address (optional)"
            },
            "mac": {
              "title": "MAC Address",
              "type": "string",
              "description": "Access point MAC address (optional)"
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "UniFi Controller Settings",
      "expandable": false,
      "items": [
        "unifi.controller",
        "unifi.apiKey",
        "unifi.useSiteManagerApi",
        "unifi.hostId",
        "unifi.site",
        "unifi.secure"
      ]
    },
    {
      "type": "fieldset", 
      "title": "General Settings",
      "expandable": true,
      "items": [
        "interval",
        "globalPresenceSensor"
      ]
    },
    {
      "type": "fieldset",
      "title": "Residents & Devices",
      "expandable": false,
      "items": [
        {
          "key": "residents",
          "type": "array",
          "items": [
            "residents[].name",
            {
              "key": "residents[].devices",
              "type": "array",
              "items": [
                "residents[].devices[].name",
                "residents[].devices[].hostname",
                "residents[].devices[].ip",
                "residents[].devices[].mac",
                "residents[].devices[].minTrafficAmount"
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "WiFi Access Points",
      "expandable": true,
      "items": [
        {
          "key": "wifiPoints",
          "type": "array",
          "items": [
            {
              "type": "flex",
              "flex-flow": "row wrap",
              "items": [
                "wifiPoints[].name",
                "wifiPoints[].ip",
                "wifiPoints[].mac"
              ]
            }
          ]
        }
      ]
    }
  ]
}
