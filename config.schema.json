{
  "pluginAlias": "UnifiOccupancy",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "unifi": {
        "title": "UniFi Controller Settings",
        "type": "object",
        "properties": {
          "controller": {
            "title": "Controller URL",
            "description": "Requires UniFi OS",
            "type": "string",
            "required": true,
            "default": "https://192.168.1.1"
          },
          "username": {
            "title": "Username",
            "type": "string",
            "required": true
          },
          "password": {
            "title": "Password",
            "type": "string",
            "required": true
          },
          "site": {
            "title": "Site",
            "type": "string",
            "default": "default",
            "required": true
          },
          "secure": {
            "title": "Validate the Controller SSL Certificate",
            "type": "boolean",
            "default": false
          }
        }
      },
      "interval": {
        "title": "Refresh Interval (in seconds)",
        "description": "If connect/disconnect/roam events don't work, ",
        "type": "integer",
        "required": false,
        "default": 180
      },
      "showAsOwner": {
        "title": "Show these devices using the owner's name",
        "description": "Should be a device that the owner always carries around. The owner's name is derived from the device (host)name or alias (configured in the UniFi Network UI). For example, `Douwe's [device]` (English), `[device] de Douwe` (Spanish), and `[device] van Douwe` (Dutch) all become `Douwe`.",
        "type": "string",
        "default": "smartphone",
        "oneOf": [
          {
            "title": "Smartphone",
            "enum": ["smartphone"]
          },
          {
            "title": "Smart Watch",
            "enum": ["smart_watch"]
          }
        ]
      },
      "deviceType": {
        "title": "Include devices",
        "type": "object",
        "properties": {
          "smartphone": {
            "title": "Smartphone",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Create accessories for smartphones",
                "type": "boolean",
                "default": true
              },
              "lazy": {
                "title": "Create accessories only for APs a device has connected to",
                "type": "boolean",
                "default": false
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a device is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "laptop": {
            "title": "Laptop",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Create accessories for laptops",
                "description": "Currently only reliably detects MacBooks",
                "type": "boolean",
                "default": false
              },
              "lazy": {
                "title": "Create accessories only for APs a device has connected to",
                "type": "boolean",
                "default": false
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a device is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "tablet": {
            "title": "Tablet",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Create accessories for tablets",
                "type": "boolean",
                "default": false
              },
              "lazy": {
                "title": "Create accessories only for APs a device has connected to",
                "type": "boolean",
                "default": false
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a device is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "smart_watch": {
            "title": "Smart Watch",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Create accessories for smart watches",
                "type": "boolean",
                "default": false
              },
              "lazy": {
                "title": "Create accessories only for APs a device has connected to",
                "type": "boolean",
                "default": false
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a device is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "ereader": {
            "title": "E-reader",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Create accessories for e-readers",
                "type": "boolean",
                "default": false
              },
              "lazy": {
                "title": "Create accessories only for APs a device has connected to",
                "type": "boolean",
                "default": false
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a device is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "game_console": {
            "title": "Portable Game Console",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Create accessories for portable game consoles",
                "description": "Currently only detects Nintendo Switch and Valve Steam Deck",
                "type": "boolean",
                "default": false
              },
              "lazy": {
                "title": "Create accessories only for APs a device has connected to",
                "type": "boolean",
                "default": false
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a device is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "handheld": {
            "title": "Unidentified Handheld",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Create accessories for other devices identified as 'Handheld'",
                "type": "boolean",
                "default": false
              },
              "lazy": {
                "title": "Create accessories only for APs a device has connected to",
                "type": "boolean",
                "default": false
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a device is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "other": {
            "title": "Other wireless clients",
            "properties": {
              "enabled": {
                "title": "Create accessories for all other wireless clients, including non-portable",
                "type": "boolean",
                "default": false
              },
              "lazy": {
                "title": "Create accessories only for APs a client has connected to",
                "type": "boolean",
                "default": true
              },
              "home_accessory": {
                "title": "Create home-wide accessory that is active when a client is connected to any AP",
                "type": "boolean",
                "default": false
              }
            }
          },
          "wired": {
            "title": "Wired clients",
            "properties": {
              "enabled": {
                "title": "Create accessories for wired clients",
                "description": "An accessory is only created for the UniFi device a wired client is connected to.",
                "type": "boolean",
                "default": false
              }
            }
          }
        }
      },
      "accessPointAliases": {
        "title": "Access Point Aliases",
        "type": "array",
        "items": {
          "title": "AP / Alias",
          "type": "object",
          "properties": {
            "accessPoint": {
              "title": "Access Point",
              "description": "MAC Address or Name",
              "type": "string",
              "required": true
            },
            "alias": {
              "title": "Alias",
              "description": "Room Name",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "ref": "unifi",
      "type": "fieldset",
      "title": "UniFi Controller Settings",
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["unifi.controller", "unifi.username"]
            }
          ]
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["unifi.site", "unifi.password"]
            }
          ]
        },
        "unifi.secure",
        "interval"
      ]
    },
    {
      "ref": "deviceType",
      "type": "fieldset",
      "title": "Devices",
      "items": [
        "showAsOwner",
        {
          "ref": "deviceType.smartphone",
          "type": "fieldset",
          "title": "Smartphone",
          "items": [
            "deviceType.smartphone.enabled",
            "deviceType.smartphone.lazy",
            "deviceType.smartphone.home_accessory"
          ]
        },
        {
          "ref": "deviceType.laptop",
          "type": "fieldset",
          "title": "Laptop",
          "items": [
            "deviceType.laptop.enabled",
            "deviceType.laptop.lazy",
            "deviceType.laptop.home_accessory"
          ]
        },
        {
          "ref": "deviceType.tablet",
          "type": "fieldset",
          "title": "Tablet",
          "items": [
            "deviceType.tablet.enabled",
            "deviceType.tablet.lazy",
            "deviceType.tablet.home_accessory"
          ]
        },
        {
          "ref": "deviceType.smart_watch",
          "type": "fieldset",
          "title": "Smart Watch",
          "items": [
            "deviceType.smart_watch.enabled",
            "deviceType.smart_watch.lazy",
            "deviceType.smart_watch.home_accessory"
          ]
        },
        {
          "ref": "deviceType.ereader",
          "type": "fieldset",
          "title": "E-reader",
          "items": [
            "deviceType.ereader.enabled",
            "deviceType.ereader.lazy",
            "deviceType.ereader.home_accessory"
          ]
        },
        {
          "ref": "deviceType.game_console",
          "type": "fieldset",
          "title": "Portable Game Console",
          "items": [
            "deviceType.game_console.enabled",
            "deviceType.game_console.lazy",
            "deviceType.game_console.home_accessory"
          ]
        },
        {
          "ref": "deviceType.handheld",
          "type": "fieldset",
          "title": "Unidentified Handheld",
          "items": [
            "deviceType.handheld.enabled",
            "deviceType.handheld.lazy",
            "deviceType.handheld.home_accessory"
          ]
        },
        {
          "ref": "deviceType.other",
          "type": "fieldset",
          "title": "Other wireless clients",
          "items": [
            "deviceType.other.enabled",
            "deviceType.other.lazy",
            "deviceType.other.home_accessory"
          ]
        },
        {
          "ref": "deviceType.wired",
          "type": "fieldset",
          "title": "Wired clients",
          "items": ["deviceType.wired.enabled"]
        }
      ]
    },
    {
      "key": "accessPointAliases",
      "type": "array",
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["accessPointAliases[].accessPoint"]
            },
            {
              "type": "flex",
              "flex-flow": "column",
              "items": ["accessPointAliases[].alias"]
            }
          ]
        }
      ]
    }
  ]
}
